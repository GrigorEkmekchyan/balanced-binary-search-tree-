<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_find_info"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_32"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <Button
        android:id="@+id/btn_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/delete"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button

        android:id="@+id/btn_show_child"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_delete"
        app:layout_constraintLeft_toRightOf="@id/btn_insert"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/findAllChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_insert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_find"
        app:layout_constraintRight_toLeftOf="@id/btn_show_child"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/et_delete_number"
        android:hint="@string/delete"
        app:layout_constraintBottom_toTopOf="@id/btn_delete"
        app:layout_constraintLeft_toLeftOf="@id/btn_delete"
        app:layout_constraintRight_toRightOf="@id/btn_delete"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_find_number"
        android:hint="@string/find"
        app:layout_constraintBottom_toTopOf="@id/btn_find"
        app:layout_constraintLeft_toLeftOf="@id/btn_find"
        app:layout_constraintRight_toRightOf="@id/btn_find"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <EditText
        android:id="@+id/et_insert"
        app:layout_constraintBottom_toTopOf="@id/btn_insert"
        app:layout_constraintLeft_toLeftOf="@id/btn_insert"
        app:layout_constraintRight_toRightOf="@id/btn_insert"
        android:inputType="number"
        android:hint="@string/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>